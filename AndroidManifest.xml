<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.orangestooranges"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name="com.example.orangestooranges.MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.orangestooranges.LoginActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.orangestooranges.PlayGameMenu"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.orangestooranges.PregameWaiting"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.orangestooranges.PlayCard"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.orangestooranges.EndScreen"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_end_screen" >
        </activity>
        <activity
            android:name="com.example.orangestooranges.DisplayCards"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.orangestooranges.SettingActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_setting" >
        </activity>
        <activity
            android:name="com.example.orangestooranges.JudgeScreen"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_judge_screen" >
        </activity>
        <activity
            android:name="com.example.orangestooranges.PassPlay"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_pass_play" >
        </activity>
        <activity
            android:name="com.example.orangestooranges.SplashScreen"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_splash_screen" >
        </activity>
		
        <activity
            android:name="com.example.orangestooranges.Instructions"
            android:screenOrientation="portrait"
            android:label="@string/Instructions" >
        </activity>

    </application>

</manifest>
