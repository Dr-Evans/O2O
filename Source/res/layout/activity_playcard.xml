                android:layout_height="wrap_content"
                android:text=""
                android:onClick="cardClicked" />

            <Button
                android:id="@+id/card5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:onClick="cardClicked" />
            
            <Button
                android:id="@+id/card6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:onClick="cardClicked" />
            
            <Button
                android:id="@+id/card7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:onClick="cardClicked" />

        </LinearLayout>
    </HorizontalScrollView>

</RelativeLayout>