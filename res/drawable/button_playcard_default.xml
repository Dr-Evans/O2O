<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/orange" />
            <corners
                android:radius="12dp" />
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp" />
            <stroke 
                android:width="1dp" 
                android:color="#FFFFFF" />
			<padding 
			    android:left="1dp" 
			    android:top="1dp" 
			    android:right="1dp"
			    android:bottom="1dp" />
        </shape>
        
</item>
    <item>
          <shape >
            <solid
                android:color="@color/lightOrange" />
           
            <corners
                android:radius="12dp" />
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp" />
            <stroke 
                android:width="1dp" 
                android:color="#000000" />
			<padding 
			    android:left="1dp" 
			    android:top="1dp" 
			    android:right="1dp"
			    android:bottom="1dp" />
        </shape>
</item>
 
</selector>


